import getReducer from '../getReducer';
import assign from 'object-assign';
<% if (action) { -%>
import {<%= REQUEST %>, <%= SUCCESS %>, <%= FAILURE %>} from '../../action/<%= directory %>/<%= action %>';
<% } -%>

function <%= reducer %>(state = {
  isFetching: false,
  loaded: false
}, action) {
  switch (action.type) {
<% if (action) { -%>
    case <%= REQUEST %>:
      return assign({}, state, {
        isFetching: true
      });
    case <%= SUCCESS %>:
      return assign({}, state, {
        isFetching: false,
        loaded: true
      });
    case <%= FAILURE %>:
      return assign({}, state, {
        isFetching: false
      });
<% } -%>
    default:
      return state;
  }
}

export default getReducer(<%= reducer %>);
